<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f8fafc">

    <!-- Chat header with gradient and connection badge -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bg_header_gradient"
        android:padding="16dp"
        android:elevation="8dp">

        <TextView
            android:id="@+id/chat_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BlueChat"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:shadowColor="#33000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <TextView
            android:id="@+id/connection_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”´ Kopuk"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_badge_disconnected"
            android:layout_marginEnd="8dp" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/message_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

    <!-- Modern input bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#f8fafc"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/message_edit_text"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="Mesaj yazÄ±n..."
            android:inputType="text"
            android:autofillHints="text"
            android:background="@drawable/bg_input"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColorHint="#94a3b8"
            android:textColor="#1e293b"
            android:textSize="16sp"
            android:layout_marginEnd="12dp" />

        <ImageButton
            android:id="@+id/attach_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_attach"
            android:tint="#64748b"
            android:contentDescription="Dosya Ekle"
            android:background="@drawable/bg_attach_button"
            android:layout_marginEnd="8dp"
            android:elevation="2dp" />

        <ImageButton
            android:id="@+id/send_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_send"
            android:tint="#ffffff"
            android:contentDescription="GÃ¶nder"
            android:background="@drawable/bg_send_button"
            android:elevation="4dp" />

    </LinearLayout>

</LinearLayout>
